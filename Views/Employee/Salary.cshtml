@{
}

@model Employee

<div class="container">
    <h1 class="mt-3">Salary Calculator</h1>
    <main>
        <form asp-action="Salary" method="post" class=" form-check-horizontal">

            <div class="row">
                <label asp-for="Name" class="control-label col-sm-3"><i class="fa-regular fa-user"></i>&nbsp;Name: </label>
                <input asp-for="Name" class="form-control col-sm-3"/>
            </div>

            <div class="row">
                <label asp-for="PayRate" class="control-label col-sm-3"><i class="fa-solid fa-coins"></i>&nbsp; Pay Rate: </label>
                <input asp-for="PayRate" class="form-control col-sm-3" />
            </div>
        
            <div class="row">
                <label asp-for="Hours" class="control-label col-sm-3"><i class="fa-solid fa-hourglass"></i>&nbsp; Hours: </label>
                <input asp-for="Hours" class="form-control col-sm-3" />
            </div>

            <div class="row">
                <label class="control-label col-sm-3"><i class="fa-solid fa-money-bill"></i>&nbsp; Salary: </label>
                <input value="@ViewBag.Salary.ToString("c2")" readonly class="form-control col-sm-3" />
            </div>

            <div class="row">
                <div class="col offset-sm-3 pl-0">
                    <button type="submit" class="btn btn-primary">Calculate</button>
                    <a asp-action="Salary" class="btn btn-outline-secondary">Clear</a>
                </div>
            </div>
        </form>
    </main>
</div>